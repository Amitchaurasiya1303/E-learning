<%- include('partials/sideBar') %>
  <main class="bg-light">

    <div>
      <%- include('partials/navbar',{instructor}) %>
    </div>

    <div class="row mx-1 my-4">

      <div class="col-md-12 bg-white shadow-sm my-4" id="data-table">

        <div class="d-flex align-items-center justify-content-between">
          <div>
            <h2>Launched Courses</h2>
            <p>This Table Contains The Launched Courses</p>
          </div>
          <a href="/elearning/api/v1/instructor/addNewCourse">
            <button class="search mybtn bg-dark text-white mx-2">Launch New Course</button>
          </a>
        </div>

        <table class="table table-striped table-bordered">

          <thead>
            <tr class="bg-dark">
              <th class="text-white">Image</th>
              <th class="text-white">Course Title</th>
              <th class="text-white">Course Category</th>
              <th class="text-white">Course Duration</th>
              <th class="text-white">Course Fee</th>
              <th class="text-white">Manage</th>
            </tr>
          </thead>

          <tbody>
            <% launchedCourses.forEach(course=> {%>

              <tr>

                <td>
                  <img src="/backend/images/<%= course.course_img %>" class="img-fluid rounded-50" alt="course_img"
                    style="object-fit: cover; height: 50px; width: 50px;">
                </td>

                <td>
                  <%= course.course_title %>
                </td>

                <td>
                  <%= course.course_category %>
                </td>

                <td>
                  <%= course.course_duration %> Week
                </td>

                <td>
                  <%= course.course_fee %> INR
                </td>

                <td>
                  <a href="/elearning/api/v1/instructor/manageCourse/<%= course._id %>">
                    <button class="mybtn bg-danger border-danger text-white">Course</button>
                  </a>

                  <a href="/elearning/api/v1/instructor/showclasses/<%= course._id %>">
                    <button class="mybtn bg-success border-success text-white">Classes</button></a>
                  </a>
                </td>
              </tr>

              <% }) %>

          </tbody>
        </table>
      </div>
    </div>