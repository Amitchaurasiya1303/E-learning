<%- include('../partials/navbar.ejs') %>
    <div class="container">
        <div class="row p-5">


            <div class="col-md-4 my-auto mx-auto">
                <h1 class="d-flex justify-content-center mb-4"><b><span class="text-danger">Hello, </span>INSTRUCTOR</b>
                </h1>


                <% if (message && message.length> 0) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= message[0] %>
                    </div>
                    <% } %>


                        <form action="/elearning/api/v1/instructor/login" method="post">



                            <div class="mb-4">
                                <input type="text" class="form-control" id="email_id" name="email_id"
                                    placeholder="Email Id" required>
                            </div>

                            <div class="mb-4">
                                <input type="password" class="form-control" id="password" name="password"
                                    placeholder="Password" required>
                            </div>

                            <div class="mb-4 form-check">
                                <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe"
                                    value="rememberMe">
                                <label class="form-check-label" for="rememberMe">Remember Me</label>
                            </div>

                            <a href="#">Forget Password?</a>

                            <button type="submit" class="mybtn mt-4 bg-dark text-white btn-primary w-100">Log
                                In</button>

                        </form>

            </div>
        </div>
    </div>


    <%- include('../partials/footer.ejs') %>