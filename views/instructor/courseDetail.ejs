<%- include('partials/navbar.ejs',{instructor}) %>
  <div class="container">
    <div class="row mx-1 my-4">
      <div class="col-md-8">

        <h5 class="m-0 p-0">
          <%= course.course_title %>
        </h5>
        <p>
          <%= course.course_category%>
        </p>
        <p><span>Course Instructor: </span><span>
            <%= course.course_tutor %>
          </span></p>
        <p><span>Language: </span>
          <%= course.course_language%>
        </p>

        <p><span>Duration: </span>
          <%= course.course_duration %> Weeks
        </p>

        <h5 class="m-0 p-2 bg-light text-dark rounded shadow-sm">Course Discription</h5>
        <p>
          <%= course.course_description%>
        </p>

        <!-- Display Course Topics -->
        <h5 class="m-0 p-2 bg-light text-dark rounded shadow-sm">Covered Topics</h5>

        <ol type="I">
          <% course.course_topics.forEach(topic=> { %>

            <li>
              <%= topic %>
            </li>

            <% }); %>
        </ol>
        <!-- End Display Course Topics -->

        <h5 class="m-0 p-0 p-2 bg-light text-dark rounded shadow-sm">Course Objective</h5>
        <p>
          <%= course.course_objective%>
        </p>

        <h5 class="m-0 p-0 p-2 bg-light text-dark rounded shadow-sm">Future Scope</h5>
        <p>
          <%= course.future_scope%>
        </p>
      </div>
      <div class="col-md-4">
        <div class="row my-5">
          <div class="col-md-12 card-slide">


            <!-- card-1 -->
            <div class="card" style="width: 18rem;">
              <img src="/backend/images/<%= course.course_img %>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-text m-0 p-0">
                  <%= course.course_title %>
                </h5>
                <p class="card-text">
                  <%= course.course_description %>
                </p>
                <span class="m-0 p-0">Price:<span>
                    <%= course.course_fee%>/- INR
                  </span></span>
                <% if(!student) { %>
                  <a href="/elearning/api/v1/student/login"><button class="btn bg-dark text-white w-100 p-2 rounded">Buy
                      Now</button></a>
                  <% } else { %>
                    <a href="/elearning/api/v1/student/enrolledcourse/classes/<%=course._id%>"><button
                        class="btn bg-dark text-white w-100 p-2 rounded">View Course</button></a>
                    <% } %>
              </div>
            </div>
            <!-- card-1 -->
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('partials/footer.ejs') %>