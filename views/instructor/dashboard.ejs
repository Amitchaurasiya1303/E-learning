<%- include('partials/sideBar') %>
  <main class="bg-light">
    <div>
      <%- include('partials/navbar',{instructor}) %>
    </div>
    
    <div class="row mx-1 rounded my-5">
      <div class="col-md-12 shadow-sm bg-white d-flex justify-content-center align-items-center flex-column p-5">
        <h1>Empower Your Mind, Embrace the Future</h1>
        <p class="d-none d-sm-block">"Unleash Learning Excellence Anytime, Anywhere with Our E-Learning Platform!"</p>
      </div>
    </div>

    <div class="row mx-1">
      <div class="col-md-8 mt-2 bg-white  shadow-sm p-2"  style="height: 55vh; overflow-y: scroll;" >
        <table class="table table-striped table-bordered">
          <thead>
            <tr class="bg-dark">
              <th class="text-white"></th>
              <th class="text-white">Name</th>
              <th class="text-white">Conact No.</th>
              <th class="text-white">Email ID</th>
              <th class="text-white">Course Title</th>
              <th class="text-white">Course ID</th>
            </tr>
          </thead>
          <tbody>

            <% students.forEach(student=> { %>

              <td>
                <% if (!student.student.profile_pic) { %>

                  <img src="/Assets/default_profile.jpg" alt="#"
                    style="height: 50px; width: 50px; object-fit: cover; border-radius: 50%;">

                  <% }else{%>

                    <img src="/backend/images/<%= student.student.profile_pic%>" alt="#"
                      style="height: 50px; width: 50px; object-fit: cover; border-radius: 50%;">

                    <%}%>

              </td>
              <td>
                <%= student.student.first_name %>
                  <%= student.student.last_name %>
              </td>

              <td>
                <%= student.student.phone_number %>
              </td>
              <td>
                <%= student.student.email_id %>
              </td>

              <td>
                <%= student.course._id%>
              </td>

              <td>
                <%= student.course.course_title%>
              </td>
              </tr>
              <% }) %>

          </tbody>
        </table>
      </div>

      <div class="col-md-4">
        <div class="row">
          <div class="col-md-12 bg-white rounded shadow-sm d-flex flex-column align-items-center p-5">
            <h5>Enrolled Students</h5>
            <h1>
              <%= students.length %>
            </h1>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12 bg-white rounded shadow-sm d-flex flex-column align-items-center p-5">

            <h5>Launched Courses</h5>
            <h1>
              <%= courses.length %>
            </h1>

          </div>
        </div>
      </div>
    </div>
  </main>