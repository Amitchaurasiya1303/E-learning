<%- include('./../partials/navbar.ejs') %>

    <!-- start: Main -->

    <!-- start: Content -->
    <div class="container">
        <div class="py-4">
            <!-- start: Summary -->
            <div class="row g-3">
                <div class="col-md-8 my-3 ">

                    <h5 class="m-0 p-0">
                        <%= course.course_title %>
                    </h5>
                    <br>
                    <p class="m-0 p-0"> <b>Course Instructor :</b>
                        <%= course.course_tutor %>
                    </p>
                    <p class="m-0 p-0"> <b>Language :</b>
                        <%= course.course_language %>
                    </p>

                    <div class="my-1">

                        <% classes.forEach(classItem=> { %>
                            <!-- cr-1 -->
                            <a href="/elearning/api/v1/student/watch_class/<%= classItem.c_id %>/<%= classItem._id %>">
                                <div class="card">
                                    <div class="row g-0">
                                        <div class="col-md-2 d-flex align-items-center">
                                            <img src="/backend/images/<%= course.course_img %>"
                                                class="img-fluid rounded" alt="Artificial Intelligence"
                                                style="height: 100%; object-fit: cover;">
                                        </div>
                                        <div class="col-md-8">
                                            <div class="card-body">
                                                <h5 class="m-0 p-0">
                                                    <%=classItem.class_title%>
                                                </h5>
                                                <p class="card-title m-0 p-0">
                                                    <%= classItem.class_desc %>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                            <!-- cr-1 -->
                            <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <%- include('./../partials/footer.ejs') %>