<%- include('../partials/navbar.ejs') %>
    <div class="container">
        <div class="row p-5">

            <% if (message && message.length> 0) { %>
                <div class="alert alert-danger" role="alert">
                    <%= message[0] %>
                </div>
                <% } %>


                    <div class="col-md-4 my-auto mx-auto">
                        <h1 class="d-flex justify-content-center"><b>Log In</b></h1>
                        <form action="/elearning/api/v1/student/login" method="post">

                            <div class="row my-4">
                                <div class="col-md-12">
                                    <input class="form-control" type="text" name="username" placeholder="Username">
                                </div>
                            </div>

                            <div class="row my-4">
                                <div class="col-md-12">
                                    <input class="form-control" type="text" name="password" placeholder="Password">
                                </div>
                            </div>

                            <div class="row my-4">
                                <div class="col-md-12">
                                    <input class="form-check-input" type="checkbox" value="remmberme"
                                        id="flexCheckDefault">&nbsp;Remmber Me
                                </div>
                            </div>

                            <a href="#">Forget Password ?</a>

                            <div class="row my-4">
                                <div class="col-md-12">
                                    <button type="submit" class="btn bg-dark p-2 text-white w-100">Log In</button>
                                </div>
                            </div>

                            <a href="/eLearning/api/v1/student/register">New User ?</a>
                            
                        </form>

                    </div>
                    
        </div>
    </div>

    <%- include('../partials/footer.ejs') %>